<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>sd-dss</artifactId>
    <groupId>eu.europa.ec.joinup.sd-dss</groupId>
    <version>4.5.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>sscd-mocca-adapter</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>at.gv.egiz:*</include>
              <include>org.slf4j:*</include>
              <include>*:iaik_jce_me4se</include>
            </includes>
          </artifactSet>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/maven/**/*</exclude>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
          <archive>
            <transformers>
              <transformer>
                <manifestEntries>
                  <Application-Name>SD-DSS MOCCA SSCD Plugin</Application-Name>
                  <Permissions>all-permissions</Permissions>
                  <Codebase>*</Codebase>
                </manifestEntries>
              </transformer>
            </transformers>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>codesigning</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-jarsigner-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <storetype>${keystore.type}</storetype>
              <keystore>${keystore.path}</keystore>
              <alias>${keystore.alias}</alias>
              <storepass>${keystore.store.password}</storepass>
              <keypass>${keystore.key.password}</keypass>
              <tsa>http://services.globaltrustfinder.com/adss/tsa</tsa>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>eu.europa.ec.joinup.sd-dss</groupId>
      <artifactId>dss-spi</artifactId>
      <version>4.5.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>

